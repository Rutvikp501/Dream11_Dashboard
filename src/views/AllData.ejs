<%- include('./partials/header.ejs') %>

<style>
    
h1{
  font-size: 30px;
  color: #fff;
  text-transform: uppercase;
  font-weight: 300;
  text-align: center;
  margin-bottom: 15px;
}
table{
  width:100%;
  table-layout: fixed;
}
.tbl-header{
  background-color: rgba(255,255,255,0.3);
  background: linear-gradient(-45deg, #f89b29 0%, #ff0f7b 100% );
 }
