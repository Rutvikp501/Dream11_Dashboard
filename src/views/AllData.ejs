    main {
      color: white;
    }

    header {
      background-color: white;
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      height: 80px;
      display: flex;
      align-items: center;
      box-shadow: 0 0 25px 0 black;
    }

    header * {
      display: inline;
    }

    header li {
      margin: 20px;
    }

    header li a {
      color: black;
      text-decoration: none;
    }
  </style>
    </head>
    <body>
        <header>
            <img src="../../../black-logo-transparent.png">
             <nav>
                 <ul>
                     <li><a href="/leadtable">Lead Board</a></li>
                     <li><a href="/allData">All Data</a></li>
                     <li><a href="/stats">Analytics</a></li>
                     <li><a href="/upload">Update</a></li>
                     <li><a href="#">Contact</a></li>
                 </ul>
             </nav>
         </header>
        <div style="margin-top: 100px;">
            <div class="container">
                <h1 class='lineUp'>Lead Board</h1>
                <section>
                    <div class="tbl-header">
                      <table cellpadding="0" cellspacing="0" border="0">
                        <thead>
                          <tr>
                            <th>Date</th>
                            <th>Match</th>
                            <% if (data && data.length > 0 && data[0].players) { %>
                                <% data[0].players.forEach(function(player) { %>
                                    <th><%= player.name %></th>
                                <% }); %>
                            <% } %>
                            
                        </tr>
                        </thead>
                      </table>
                    </div>
                    <div class="tbl-content">
                      <table cellpadding="0" cellspacing="0" border="0">
                        <tbody>
                             
                          <% if (Array.isArray(data)) { %>
                            <% data.forEach(function(entry) { %>
                                <tr>
                                    <td><%= entry.date %></td>
                                    <td><%= entry.match %></td>
                                    <% if (entry.players) { %>
                                        <% var maxPoints = Math.max(...entry.players.map(player => player.points)); %>
                                        <% entry.players.forEach(function(player) { %>
                                            <% if (player.points === maxPoints) { %>
                                                <td class="max-points"><%= player.points %></td>
                                            <% } else { %>
                                                <td><%= player.points %></td>
                                            <% } %>
                                        <% }); %>
                                    <% } %>
                                </tr>
                            <% }); %>
                        <% } %>
                        
                        </tbody>
                      </table>
                    </div>
                  </section>
                  
            </div>
        </div>
    </body>
    <script>$(window).on("load resize ", function() {
        var scrollWidth = $('.tbl-content').width() - $('.tbl-content table').width();
        $('.tbl-header').css({'padding-right':scrollWidth});
      }).resize();</script>
</html>
